---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import profileImg from "../assets/profile.jpeg?url";
import about4 from "../assets/about-5.jpeg?url";
import about2 from "../assets/about-2.jpg?url";
import about3 from "../assets/about-3.jpeg?url";
import AudioBar from "../components/AudioBar.astro";
import trackLost from "../assets/music/Lost.mp3?url";
import trackSketch from "../assets/music/Sketch - Intro.mp3?url";
---

<Layout title="About">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-8">
    <Header />
    <h1 class="text-3xl md:text-4xl font-bold mb-3">About me</h1>

    <!-- Hero: avatar + intro -->
    <div class="rounded-2xl border border-zinc-200 bg-white/60 backdrop-blur-2xl p-4 md:p-5 relative overflow-hidden">
      <div class="pointer-events-none absolute -top-14 -left-14 w-40 h-40 rounded-full bg-amber-100/30 blur-2xl" aria-hidden="true"></div>
      <div class="pointer-events-none absolute -bottom-16 -right-16 w-48 h-48 rounded-full bg-indigo-100/30 blur-2xl" aria-hidden="true"></div>
      <div class="relative flex items-start gap-3 md:gap-4">
        <div class="relative shrink-0 w-20 h-20 md:w-24 md:h-24 aspect-square rounded-2xl border border-transparent ring-1 ring-zinc-200 bg-white shadow-sm overflow-hidden">
          <img src={profileImg} alt="Gideon Appau" class="w-full h-full object-cover" loading="lazy" onerror="this.style.display='none'" />
          <div class="absolute inset-0 pointer-events-none rounded-2xl" style="box-shadow: inset 0 0 0 1px rgba(0,0,0,.02)"></div>
        </div>
        <div class="min-w-0">
          <p class="text-gray-700" style="line-height: 1.9">
            I’m Gideon Appau. I design and build products, write about the journey, and care about craft. Chess helps me think. Music and poetry keep things human.
          </p>
          <div class="mt-2 flex flex-wrap gap-2 text-[12px] text-gray-600">
            <span class="px-2 py-0.5 rounded-full border border-zinc-200 bg-white/70">Product engineering</span>
            <span class="px-2 py-0.5 rounded-full border border-zinc-200 bg-white/70">Writing</span>
            <span class="px-2 py-0.5 rounded-full border border-zinc-200 bg-white/70">Design</span>
          </div>
          <div class="mt-3 flex flex-wrap items-center gap-3 text-[12px]">
            <span class="inline-flex items-center gap-1 rounded-full border border-emerald-200 bg-emerald-50/80 px-2 py-0.5 text-emerald-700">
              <span class="inline-block h-1.5 w-1.5 rounded-full bg-emerald-500"></span>
              Available for light collabs
            </span>
            <span class="inline-flex items-center gap-1 rounded-full border border-zinc-200 bg-white/70 px-2 py-0.5 text-gray-700">
              Takoradi, Ghana
            </span>
            <div class="ms-auto flex flex-wrap gap-2 text-gray-600">
              <span class="px-2 py-0.5 rounded-full border border-zinc-200 bg-white/70"><span class="font-semibold">3+</span> yrs building</span>
              <span class="px-2 py-0.5 rounded-full border border-zinc-200 bg-white/70"><span class="font-semibold">20+</span> projects</span>
              <span class="px-2 py-0.5 rounded-full border border-zinc-200 bg-white/70"><span class="font-semibold">Notes</span> in progress</span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Bio + Snapshot -->
    <section class="mt-6 grid grid-cols-1 md:grid-cols-2 gap-4">
      <div class="rounded-xl border border-zinc-200 bg-white/60 backdrop-blur-2xl p-4">
        <h3 class="font-semibold mb-1">Now</h3>
        <ul class="list-disc ms-5 text-sm text-gray-700 space-y-1">
          <li>Shipping portfolio updates and writing more</li>
          <li>Building Larry SMS Hub and MarketMate</li>
          <li>Collecting messy ideas in public</li>
        </ul>
      </div>
      <div class="rounded-xl border border-zinc-200 bg-white/60 backdrop-blur-2xl p-4">
        <h3 class="font-semibold mb-1">A few things I like</h3>
        <div class="flex flex-wrap gap-2 text-[12px]">
          <span class="px-2 py-0.5 rounded-full border border-zinc-200 bg-white/70">TypeScript</span>
          <span class="px-2 py-0.5 rounded-full border border-zinc-200 bg-white/70">Astro</span>
          <span class="px-2 py-0.5 rounded-full border border-zinc-200 bg-white/70">Tailwind</span>
          <span class="px-2 py-0.5 rounded-full border border-zinc-200 bg-white/70">React Native</span>
          <span class="px-2 py-0.5 rounded-full border border-zinc-200 bg-white/70">Postgres</span>
          <span class="px-2 py-0.5 rounded-full border border-zinc-200 bg-white/70">MongoDB</span>
          <span class="px-2 py-0.5 rounded-full border border-zinc-200 bg-white/70">Figma</span>
        </div>
      </div>
    </section>

    <!-- Hobbies -->
    <section class="mt-6">
      <div class="rounded-xl border border-zinc-200 bg-white/60 backdrop-blur-2xl p-4">
        <h3 class="font-semibold mb-1">Hobbies</h3>
        <div class="flex flex-wrap gap-2 text-[12px]">
          <span class="px-2 py-0.5 rounded-full border border-zinc-200 bg-white/70">Music production</span>
          <span class="px-2 py-0.5 rounded-full border border-zinc-200 bg-white/70">Chess</span>
          <span class="px-2 py-0.5 rounded-full border border-zinc-200 bg-white/70">Poetry</span>
          <span class="px-2 py-0.5 rounded-full border border-zinc-200 bg-white/70">Playing instruments</span>
          <span class="px-2 py-0.5 rounded-full border border-zinc-200 bg-white/70">Mobile photography</span>
          <span class="px-2 py-0.5 rounded-full border border-zinc-200 bg-white/70">Videography</span>
        </div>
      </div>
    </section>

    <!-- Now playing -->
    <section class="mt-6">
      <div class="text-xs uppercase tracking-wide text-gray-500 mb-2">Now playing</div>
      <AudioBar 
        tracks={[
          { src: trackLost, title: "Lost", artist: "Gideon Appau" },
          { src: trackSketch, title: "Sketch - Intro", artist: "Gideon Appau" }
        ]} 
        title="Now playing" 
        artist="Gideon Appau" 
      />
      <div class="mt-2 text-center">
        <a href="https://audiomack.com/beatzbydeon" target="_blank" rel="noopener" 
           class="inline-flex items-center gap-1 text-xs text-gray-600 hover:text-gray-800 transition-colors">
          <span>♪</span>
          <span>More music on Audiomack</span>
          <span class="text-[10px]">↗</span>
        </a>
      </div>
    </section>

    <!-- CTA row -->
    <section class="mt-6">
      <div class="flex flex-wrap gap-2">
        <a href="/projects" class="px-3 py-1.5 rounded-full border border-zinc-300 bg-white font-semibold hover:bg-white/80">Projects</a>
        <a href="/contact" class="px-3 py-1.5 rounded-full border border-zinc-300 bg-white font-semibold hover:bg-white/80">Contact</a>
        <a href="/autograph" class="px-3 py-1.5 rounded-full border border-zinc-300 bg-white font-semibold hover:bg-white/80">Autograph</a>
      </div>
    </section>

    <!-- Small quote -->
    <section class="mt-6">
      <blockquote class="rounded-xl border border-zinc-200 bg-white/60 backdrop-blur-2xl p-4 text-sm text-gray-700 leading-relaxed">
        “Build with care. Keep it simple. Make it useful.”
      </blockquote>
    </section>

    <!-- Highlights timeline -->
    <section class="mt-6">
      <div class="text-xs uppercase tracking-wide text-gray-500 mb-2">Highlights</div>
      <div class="rounded-xl border border-zinc-200 bg-white/60 backdrop-blur-2xl p-4">
        <ol class="relative ms-3 text-sm text-gray-700">
          <li class="mb-3">
            <span class="absolute -left-3 top-1.5 w-2 h-2 rounded-full bg-indigo-500"></span>
            2025 — Shaping MarketMate (local food infra) and Larry SMS Hub (branded messaging)
          </li>
          <li class="mb-3">
            <span class="absolute -left-3 top-1.5 w-2 h-2 rounded-full bg-emerald-500"></span>
            2024 — Published messy ideas page; rebuilt portfolio in Astro
          </li>
          <li>
            <span class="absolute -left-3 top-1.5 w-2 h-2 rounded-full bg-amber-500"></span>
            Earlier — Built small tools, wrote notes, learned in public
          </li>
        </ol>
      </div>
    </section>

    <!-- Image gallery (optional) -->
    <section class="mt-6">
      <div class="text-xs uppercase tracking-wide text-gray-500 mb-2">Photos</div>
      <div class="grid grid-cols-2 md:grid-cols-3 gap-3">
        <figure class="group aspect-[4/3] rounded-xl border border-zinc-200 bg-white/60 overflow-hidden transition-shadow duration-300 hover:shadow-md hover:shadow-zinc-200/70">
          <img src={about4} alt="" class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-[1.03]" loading="lazy" onerror="this.style.display='none'" />
          <figcaption class="px-2 py-1 text-[11px] text-gray-600">Work in focus</figcaption>
        </figure>
        <figure class="group aspect-[4/3] rounded-xl border border-zinc-200 bg-white/60 overflow-hidden transition-shadow duration-300 hover:shadow-md hover:shadow-zinc-200/70">
          <img src={about2} alt="Everyday things" class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-[1.03]" loading="lazy" onerror="this.style.display='none'" />
          <figcaption class="px-2 py-1 text-[11px] text-gray-600">Little joys</figcaption>
        </figure>
        <figure class="group aspect-[4/3] rounded-xl border border-zinc-200 bg-white/60 overflow-hidden transition-shadow duration-300 hover:shadow-md hover:shadow-zinc-200/70">
          <img src={about3} alt="A quiet moment" class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-[1.03]" loading="lazy" onerror="this.style.display='none'" />
          <figcaption class="px-2 py-1 text-[11px] text-gray-600">A quiet moment</figcaption>
        </figure>
      </div>
    </section>

    <!-- Social / CTA row -->
    <section class="mt-6">
      <div class="text-xs uppercase tracking-wide text-gray-500 mb-2">Elsewhere</div>
      <div class="flex flex-wrap gap-2">
        <a href="mailto:hello@" class="px-3 py-1.5 rounded-full border border-zinc-300 bg-white font-semibold hover:bg-white/80">Email</a>
        <a href="https://github.com/" target="_blank" rel="noopener" class="px-3 py-1.5 rounded-full border border-zinc-300 bg-white font-semibold hover:bg-white/80">GitHub</a>
        <a href="https://x.com/" target="_blank" rel="noopener" class="px-3 py-1.5 rounded-full border border-zinc-300 bg-white font-semibold hover:bg-white/80">X</a>
      </div>
    </section>
  </div>
</Layout>

