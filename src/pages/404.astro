---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="Page Not Found">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-8">
    <Header />
    <div class="text-center py-16">
      <h1 class="text-6xl md:text-8xl font-bold text-gray-300 mb-4">404</h1>
      <h2 class="text-2xl md:text-3xl font-semibold mb-4">Oops! Page not found</h2>
      <p class="text-gray-600 mb-8 max-w-md mx-auto">
        The page you're looking for doesn't exist. Maybe it got lost in the code somewhere.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/" class="px-6 py-3 rounded-full border border-zinc-300 bg-white text-sm font-semibold hover:bg-white/80">
          Go Home
        </a>
        <a href="/contact" class="px-6 py-3 rounded-full border border-zinc-300 bg-white/70 text-sm font-semibold hover:bg-white">
          Contact Me
        </a>
      </div>
    </div>
  </div>
</Layout>
<Footer />
