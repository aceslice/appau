---
const title = Astro.props.title || "Akwaaba!";
import background from "../assets/background.svg";
import Topnav from "../components/Topnav.astro";
import "../styles/global.css";
import { ClientRouter } from "astro:transitions";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/ace 1.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Aceslice</title>
    <ClientRouter />
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-6DR42NTNSP"
    ></script></head
  >
</html>

<body
  id="container"
  class="max-w-7xl md:w-5xl w-full border-l border-dashed border-r border-gray-200 p-2 md:p-20"
  style="margin: 0 auto;"
>
  <img id="background" src={background.src} alt="" fetchpriority="high" />

  <Topnav />
  <slot />
</body><style is:global>
  @import url("https://fonts.googleapis.com/css2?family=Syne:wght@400..800&display=swap");
  * {
    font-family: "Syne", sans-serif;
  }
  body {
    font-size: 16px;
    line-height: 1.5;
    color: #333;
    margin: 0;
  }
  #background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    filter: blur(900px);
  }
</style>
